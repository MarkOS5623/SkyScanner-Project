@model IEnumerable<CreditCard>

<div class="container p-3">
    <div class="card text-white bg-primary mb-3" style="max-width: auto;">
        <div class="card-header">Payment Information</div>
        <div class="card-body">
            @if(Model != null)
                @foreach(var obj in Model){
                <ul class="list-group p-3">
                    <li class="list-group-item">
                       <p><b>Card Number: </b> Card ending with @obj.CardNumber.Substring(obj.CardNumber.Length - 4)</p>
                    </li>
                    <li class="list-group-item">
                       <p><b>Exp Date: </b> @obj.ExpMonth/@obj.ExpYear</p>
                    </li>
                    <li class="list-group-item">
                       <p><b>Card CVV: </b> ***</p>
                    </li>
                    <li class="list-group-item">
                            <p><b>Holder ID: </b> ID ending with @obj.Israeli_ID.Substring(obj.Israeli_ID.Length - 3)</p>
                    </li>
                </ul>
                }
                <ul class="list-group p-3 text-center">
                <a asp-controller="User" asp-action="AddCreditCard" style="width:auto; color:rgba(255, 255, 255, 1)">
                        <font size="8"><i class="bi bi-plus-circle"></i> </font>
                    </a>
                </ul>
        </div>
    </div>
</div>