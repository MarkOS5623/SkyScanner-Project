@model Flight

<br />
<form method="post">
    <div class="form-group">
       <label asp-for="FlightId" class="form-label"> </label>
       <input asp-for="FlightId" style="width:25%" class="form-control" placeholder="Flight ID"/>
    </div>

    <div class="form-group">
       <label asp-for="Origin" class="form-label mt-4"></label>
       <input asp-for="Origin" style="width:25%" class="form-control" placeholder="Origin"/>
    </div>

    <div class="form-group">
      <label asp-for="Destination" class="form-label mt-4"> </label>
      <input asp-for="Destination" style="width:25%" class="form-control" placeholder="Destination"/>
    </div>

    <div class="form-group">
      <label asp-for="Price" class="form-label mt-4"></label>
      <input asp-for="Price" style="width:25%" class="form-control" placeholder="Price"/>
    </div>

    <div class="form-group">
      <label asp-for="Airline" class="form-label mt-4"></label>
      <input asp-for="Airline" style="width:25%" class="form-control" placeholder="Airline"/>
    </div>

    <br />
    <button type="submit" class="btn btn-primary" style="width:150px">Add</button>
    <a asp-controller="Flight" asp-action="FlightList" class="btn btn-secondary" style="width:150px">
        Back to list
    </a>
</form>