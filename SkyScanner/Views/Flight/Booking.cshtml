@model IEnumerable<string>
@{
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<div class="container p-3">
    <div class="card text-white bg-primary mb-3" style="max-width: 800px;">
        <div class="card-header">Booking Details</div>
        <div class="card-body">
            @if (Model != null)
                @foreach (var obj in Model)
                {
                    <ul class="list-group p-3">
                        @if (obj[3].Equals('-'))
                        {
                            <li class="list-group-item">
                                <p><b>Seat Number: </b> @obj[0]@obj[1]@obj[2]</p>
                            </li>
                            <li class="list-group-item">
                                <p><b>Flight Number: </b> @obj[4]@obj[5]@obj[6]@obj[7]</p>
                            </li>
                        } else{
                        <li class="list-group-item">
                            <p><b>Seat Number: </b> @obj[0]@obj[1]</p>
                        </li>
                        <li class="list-group-item">
                            <p><b>Flight Number: </b> @obj[3]@obj[4]@obj[5]@obj[6]</p>
                        </li>
                        }
                    </ul>
                }
            <ul class="row p-3">
                <a asp-controller="Flight" class="btn btn-secondary bntsmall" asp-action="CancelBooking" style="width:150px; color:rgba(255, 255, 255, 1)">
                    <font size="4">Cancel</font>
                </a>
                <a asp-controller="User" class="btn btn-primary bntsmall ms-lg-auto" asp-action="Payment" style="width:150px; color:rgba(255, 255, 255, 1)">
                    <font size="4">Procced To Payment</font>
                </a>
            </ul>
        </div>
    </div>
</div>