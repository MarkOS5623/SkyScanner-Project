@model IEnumerable<Flight>
    

@{
    ViewData["Title"] = "Flight List";
}

<div class = "container p-3">
    <div class = "row pt-4">
        <div class = "col-6">
            <h1>Flight List</h1>
        </div>
        <div class = "col-6 text-end">
            <a  asp-controller="Flight" asp-action="AddFlight" type="button" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Add Flight
            </a>
        </div>
    </div>
</div>

<table class = "table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th>
                FlightId
            </th>
            <th>
                Origin
            </th>
            <th>
                Destination
            </th>
            <th>
                Price
            </th>
            <th>
                Airline
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var obj in Model)
        {
            <tr>
                <td width="20%">
                    @obj.FlightId
                </td>
                <td width="20%">
                    @obj.Origin
                </td>
                <td width="20%">
                    @obj.Destination
                </td>
                <td width="20%">
                    @obj.Price
                </td>
                <td width="20%">
                    @obj.Airline
                </td>
            </tr>
        }
    </tbody>
</table>