<!DOCTYPE html>
<html lang="en">

<style>
    .vl {
        border-left: 3px solid #2fa4e7;
        height: 40px;
    }
</style>
<style>
    .vl2 {
        margin-top: 0px;
        border-left: 3px solid #2fa4e7;
        height: 50px;
    }
</style>

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SkyScanner</title>
    <link rel="stylesheet" href="~/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.2/font/bootstrap-icons.css">
</head>
<body class="">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary" style="background-color:rgba(5, 30, 75)">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><font color="darkcyan" size="5">SkyScanner</font></a>
                <div class="vl2"></div>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">

                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index"><font color="darkcyan" size="4">Home</font></a>
                        </li>
                        <div class="vl"></div>
                        <li class="nav-item dropdown ms-lg-auto" style="width:130px; margin-right:20px;">
                            <a class="nav-link dropdown-toggle" style="width:130px" data-bs-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">My Account</a>
                            <div class="dropdown-menu" style="width:130px;height:auto;">
                                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="AccountInfo"><font color="darkcyan">Account Info</font></a>
                                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="PaymentMethods"><font color="darkcyan">My Credit Cards</font></a>
                                <a class="dropdown-item" asp-area="" asp-controller="User" asp-action="MyBookings"><font color="darkcyan">My Bookings</font></a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item" asp-area="" asp-controller="Home" asp-action="LogOut"><font color="darkcyan">Logout</font></a>
                            </div>
                        </li>
                        
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div style="height:0%">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
